{% from '::flash.html.twig' import session_flash %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %} | Sistema de Gestión Estación de Servicios</title>

        {% include "::stylesheets.html.twig" %}
        {% block stylesheets %}{% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/hatueysoftmenu/css/sidemenu.css') }}" media="screen">
    </head>
    <body>
        {% block body %}
            {% block header_superior_logo %}
            {# Header Superior y logo #}
            {% endblock %}

            <div id="wrapper">

                {% block left_menu_items %}
                {# Left menu items #}
                {% endblock %}

                <div id="page-wrapper">
                    <div class="row">
                        <div class="col-lg-12">
                            {% block breadcrums %}
                                {{ apy_breadcrumb_trail_render('BusetaTemplateBundle:Breadcrums:breadcrums_theme.html.twig') }}
                            {% endblock %}
                        </div>
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-9">
                                    <h3 style="margin-top: 0;">
                                        {% block header %}
                                            Título encabezado
                                        {% endblock %}
                                    </h3>
                                </div>
                                <div class="col-lg-3">
                                    {% block header_right %}
                                    {% endblock %}
                                </div>
                            </div>
                            <hr style="margin: 8px 0;"/>
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <!-- /.row -->

                    {# Session flashes #}
                    {% block flashes %}
                        <div class="row">
                            <div id="global-messages" class="col-sm-12">
                            {% if app.session.flashbag.peekAll|length > 0 %}
                                {{ session_flash(true, true) }}
                            {% endif %}
                            </div>
                        </div>
                    {% endblock flashes %}

                    {% block content %}
                        Área de Trabajo
                    {% endblock %}
                </div>
            </div>

            <!-- /#page-wrapper -->
        {% endblock body %}

        {% block footer %}
            <footer class="text-center">
                <div class="footer"><a href="#"><strong>HatueySoft</strong></a> versión <small>{{ version_sistema }}</small></div>
            </footer>
        {% endblock %}

        {% include "::javascripts.html.twig" %}
        {% block foot_script %}
            {# To only use a subset or add more js overwrite and copy paste this block
            To speed up page loads save a copy of jQuery in your project and override this block to include the correct path
            Otherwise the regeneration is done on every load in dev more with use_controller: true
             #}
            {% block foot_script_assetic %}
                {#'@BusetaTemplateBundle/Resources/bootstrap/dist/js/bootstrap.min.js'#}
                {#'@BusetaTemplateBundle/Resources/public/vendor/pickadate/picker.js'#}
                {#'@BusetaTemplateBundle/Resources/public/vendor/pickadate/picker.date.js'#}
                {#'@BusetaTemplateBundle/Resources/public/vendor/pickadate/picker.time.js'#}
                {#'@BusetaTemplateBundle/Resources/public/vendor/pickadate/legacy.js'#}
                {#'@BusetaTemplateBundle/Resources/public/vendor/pickadate/translations/es_ES.js'#}

                {#'@BusetaTemplateBundle/Resources/public/vendor/blockUI/jquery.blockUI.js'#}

                {#'@BusetaTemplateBundle/Resources/public/vendor/gritter/js/jquery.gritter.min.js'#}

                {#'@BusetaTemplateBundle/Resources/public/vendor/bootstrap-switch/js/bootstrap-switch.min.js'#}

                {#'@BusetaTemplateBundle/Resources/public/vendor/chosen/chosen.jquery.min.js'#}

                {#'@BusetaTemplateBundle/Resources/public/vendor/datetimepicker-bootstrap/moment-2.9.0/moment.js'#}
                {#'@BusetaTemplateBundle/Resources/public/vendor/datetimepicker-bootstrap/moment-2.9.0/locale/es.js'#}

                {#'@BusetaTemplateBundle/Resources/public/vendor/jquery-form/jquery.form.min.js'#}
                {#{% javascripts filter="yui_js" output='js/main.js'#}
                    {#'@BusetaTemplateBundle/Resources/public/js/*'#}
                {#%}#}
                {#<script type="text/javascript" src="{{ asset_url }}"></script>#}
                {#{% endjavascripts %}#}
                {#<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}" type="text/javascript"></script>#}
                {#<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}" type="text/javascript"></script>#}
            {% endblock foot_script_assetic %}

            <script type="text/javascript">
                $(document).ready(function () {
                    $('[data-toggle="tooltip"]').tooltip();
//                    $('[data-toggle="popover"]').popover();
                });
            </script>
            <script src="{{ asset('bundles/hatueysoftmenu/js/sidemenu.js') }}" type="text/javascript"></script>
            {% block javascripts %}{% endblock javascripts %}
        {% endblock foot_script %}
    </body>
</html>




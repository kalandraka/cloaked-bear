{% extends '@HatueySoftSecurity/layout.html.twig' %}

{% block title block('header') %}

{% block header 'Ver Datos de Usuario' %}

{% block content -%}
    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Uusario</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombres | default('-') }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ entity.apellidos | default('-') }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{% for rol in entity.roles %}{{ rol }}|{% endfor %}</td>
            </tr>

            <tr>
                <th>Grupo Buses</th>
                <td>{% for grupobuses in entity.grupobuses %}{{ grupobuses }}|{% endfor %}</td>
            </tr>

            {#<tr>
                <th>Grupos</th>
                <td>{% for group in entity.groups %}{{ group }}|{% endfor %}</td>
            </tr>#}
        </tbody>
    </table>

        <div class="btn-actions">
        {{ form_start(delete_form) }}


        <a href="{{ path('security_usuario') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-chevron-left"></span> Listado
        </a>

        <a href="{{ path('security_usuario_edit', { 'id': entity.id }) }}" class="btn btn-primary">
            <i class="fa fa-edit"></i> Editar
        </a>


        <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-trash"></span> Eliminar</button>
            {{ form_widget(delete_form._token) }}
        {{ form_end(delete_form) }}
    </div>
{% endblock %}

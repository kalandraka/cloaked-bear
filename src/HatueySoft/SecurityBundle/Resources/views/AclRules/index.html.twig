{% extends '@HatueySoftSecurity/layout.html.twig' %}

{% block title block('header') %}

{% block header 'Reglas de Listas Control de Acceso' %}

{% block content -%}
    <table class="table table-hover table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Entidad</th>
                <th>Descripci√≥n</th>
                <th>Path</th>
                <th style="width: 20%;"></th>
            </tr>
        </thead>
        <tbody>
        {% for name , path in entities %}
            <tr>
                <td>{{ name|capitalize }}</td>
                <td>{{ path.label }}</td>
                <td>{{ path.class }}</td>
                <td>
                    <div class="btn-group" style="padding: 2px">
                    <a class="btn btn-danger btn-xs"
                       href="{{ path('aclrules_edit', {'entity':name}) }}"><span
                                class="glyphicon glyphicon-edit"></span> Editar</a>
                    </div>
                    {#<a href="#" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash"></span> Eliminar</a>#}
                </td>
            </tr>
        {% else %}
            <tr><td colspan="8">No se encontraron elementos que mostrar.</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock content %}

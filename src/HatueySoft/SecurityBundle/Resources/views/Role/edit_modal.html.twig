<div data-keyboard="false" data-backdrop="static" class="modal" id="editModal" tabindex="-1" role="dialog"
     aria-labelledby="myEditModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Editar Rol</h4>
            </div>
            <div class="modal-body">
                <form name="{{ form.vars.full_name }}" id="{{ form.vars.id }}" action="{{ form.vars.action }}"
                      method="post" enctype="multipart/form-data">
                    <input type="hidden" name="_method" value="PUT"/>

                    <div class="input-group">
                        <span class="input-group-addon">ROLE_</span>
                        {{ form_widget(form.role) }}
                    </div>

                    {{ form_row(form.rolesChoices) }}

                    {{ form_widget(form._token) }}
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn_update_cancelar" class="btn btn-default" data-dismiss="modal">
                    <span class="glyphicon glyphicon-chevron-left"></span> Cancelar
                </button>
                <button type="submit" id="btn_update_aceptar" class="btn btn-primary">
                    <span class="glyphicon glyphicon-save"></span> Aceptar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

{% extends '@HatueySoftMenu/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/hatueysoftmenu/vendors/fuelux/css/tree.css') }}" media="screen">
{% endblock %}

{% block title 'Menu tree' %}

{% block headline block('title') %}

{% block content -%}
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">Men√∫ Sistema</div>
                <div class="panel-body">
                    <ul class="tree tree-folder-select" role="tree" id="menuTree">
                        <li class="tree-branch hide" data-template="treebranch" role="treeitem" aria-expanded="false">
                            <div class="tree-branch-header">
                                <button type="button" class="glyphicon icon-caret glyphicon-play"><span class="sr-only">Open</span>
                                </button>
                                <button type="button" class="tree-branch-name">
                                    <span class="glyphicon icon-folder glyphicon-folder-close"></span>
                                    <span class="tree-label"></span>
                                </button>
                            </div>
                            <ul class="tree-branch-children" role="group"></ul>
                            <div class="tree-loader" role="alert"><i class="fa fa-rotate-right fa-spin"></i></div>
                        </li>
                        <li class="tree-item hide" data-template="treeitem" role="treeitem">
                            <button type="button" class="tree-item-name">
                                <span class="glyphicon icon-item fueluxicon-bullet"></span>
                                <span class="tree-label"></span>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <div class="pull-left" id="menu_node_heading"></div>
                    <div class="pull-right">
                        <a href="#add"><i class="fa fa-plus green"></i> Add</a>
                        <a href="#editCurrent"><i class="fa fa-edit red"></i> Edit</a>
                    </div>
                </div>
                <div class="panel-body" id="menu_node_body">

                </div>
            </div>
        </div>
    </div>

    <div id="modal-danger" data-keyboard="false" data-backdrop="static" class="modal modal-darkorange fade"
         style="display: none;" aria-hidden="true"></div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/hatueysoftmenu/vendors/fuelux/js/tree.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/hatueysoftmenu/js/collectionsmanager.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/hatueysoftmenu/js/treemanager.js') }}" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            var tree = new TreeManager('#menuTree');
            tree.init();
        });
    </script>
{% endblock %}

<form id="multa_form" name="{{ form.vars.full_name }}" action="{{ form.vars.action }}" method="POST" enctype="multipart/form-data">
    {% if form.vars.method == 'PUT' %}
        <input type="hidden" name="_method" value="PUT"/>
    {% endif %}
    {{ form_errors(form) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.numArticulo) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.numBoleta) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.fecha) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.vehiculo) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.chofer) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.importe) }}
        </div>
    </div>

    <div class="row">
        <div id="multa_imp_abogado" class="col-md-4" style="display: none;">
            {{ form_row(form.importeAbogado) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.descripcion) }}
        </div>
    </div>

    <br/>

    {# buttons group #}
    <div class="row">
        <div class="col-md-4">
            <div class="btn-group">
                <a class="btn btn-primary" id="save_multa_form_submit_btn">
                    <span class="glyphicon glyphicon-save"></span> Aceptar</a>
            </div>
            <div class="btn-group">
                <a class="btn btn-default" href="{{ path('multa') }}">
                    <span class="glyphicon glyphicon-chevron-left"></span> Cancelar</a>
            </div>
        </div>
    </div>

</form>

<div class="modal" id="form_juicio_modal" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="createjuicio" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="createjuicio">{{ 'juicio.modal.title'|trans({},'BusetaTransitoBundle') }}</h4>
            </div>

            <div class="modal-body">
                <form name="{{ form.vars.full_name }}" id="{{ form.vars.id }}" action="{{ form.vars.action }}"
                      method="post" enctype="multipart/form-data">
                    {% if form.vars.method == 'PUT' %}
                        <input type="hidden" name="_method" value="PUT"/>
                    {% endif %}
                    {{ form_errors(form) }}
                    {{ form_row(form._token) }}
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.descripcion) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.resultado) }}
                        </div>
                    </div>

                    <div class="row" id="div_resultados">
                        <div class="col-md-6">
                            {{ form_row(form.responsable) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.quienPaga) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.fechaInicio) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.fechaFin) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.importeAbogado) }}
                        </div>
                    </div>

                    <br/>
                </form>
            </div>

            <div class="modal-footer">
                <a href="#" class="btn btn-default" id="btn_juicio_cancel" data-dismiss="modal"><span class="glyphicon glyphicon-chevron-left"></span>
                    {{ 'actions.cancel' | trans({}, 'BusetaTransitoBundle') }}</a>
                <a href="#" class="btn btn-primary" id="btn_juicio_save"><span class="glyphicon glyphicon-save"></span>
                    {{ 'actions.save' | trans({}, 'BusetaTransitoBundle') }}</a>
            </div>
        </div>
    </div>
</div>

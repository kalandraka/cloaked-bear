{% extends "BusetaEmpleadosBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Listado de Empleados' %}

{% block area_trabajo %}

    <div class="btn-group" style="margin-bottom: 8px;">
        <a class="btn btn-primary" href="{{ path('empleado_new') }}">
            <span class="glyphicon glyphicon-plus-sign"></span> {{ 'Adicionar Empleado' }}
        </a>
    </div>
    <table class="records_list table table-striped table-bordered table-condensed table-hover">
        <thead>
        <tr>
            <th>Nombre y Apellidos</th>
            <th>CÃ©dula</th>
            <th>Nacionalidad</th>
            <th>Tipo Empleado</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nombreCompleto }}</td>
                <td>{{ entity.cedula }}</td>
                <td>{{ entity.nacionalidad }}</td>
                {# <td>{% if entity.fechaNacimiento %}{{ entity.fechaNacimiento|date('Y-m-d H:i:s') }}{% endif %}</td> #}
                <td>{{ entity.tipoEmpleado }}</td>
                <td style="width: 18% !important; text-align: center;">
                    <div class="btn-group" style="padding: 2px">
                        <a class="btn btn-success btn-xs" href="{{ path('empleado_show', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-search"></span> Mostrar</a>
                    </div>
                    <div class="btn-group" style="padding: 2px">
                        <a class="btn btn-danger btn-xs" href="{{ path('empleado_edit', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-edit"></span> Editar</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'messages.no_results'|trans({}, 'BusetaCoreBundle') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

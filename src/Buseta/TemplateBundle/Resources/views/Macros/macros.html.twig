{% trans_default_domain 'messages' %}

{% macro documentState(state, translationDomain) %}
    {% if state == 'COMPLETE' or state == 'CO' or
    state == 'CL' or state == 'WN' or state == 'NOPARTE'%}
        {% set badge = 'success' %}
    {% elseif state == 'PROCESS' or state == 'PR' or state == 'AP'
    or  state == 'TRANSITO'%}
        {% set badge = 'primary' %}
    {% elseif state == 'POSTED' or state == 'LS' or state == 'PA'
    or state == 'PENAL'  %}
        {% set badge = 'warning' %}
    {% else %}
        {% set badge = 'danger' %}
    {% endif %}

    {% set value = ('estado.' ~ state)  | trans({}, translationDomain) %}
    <span class="label label-{{ badge }}" data-toggle="tooltip" data-placement="left"
          title="{{ 'label.state'|trans ~ ' ' ~ value }}"> {{ value | upper }}</span>
{% endmacro %}

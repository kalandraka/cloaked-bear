<form id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" action="{{ form.vars.action }}" method="POST"
      enctype="multipart/form-data">
    {% if form.vars.method == 'PUT' %}
        <input type="hidden" name="_method" value="PUT"/>
    {% endif %}
    {{ form_errors(form) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.boleta) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.chofer.chofer) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.chofer.codigobarras) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.chofer.pin) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.vehiculo) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.combustible) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.cantidadLibros) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.odometro) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.marchamo1) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.marchamo2) }}
        </div>
    </div>

    <br/>

    {# buttons group #}
    <div class="row">
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-save"></span> Aceptar</button>
            <div class="btn-group">
                <a class="btn btn-default" href="{{ path('servicioCombustible') }}">
                    <span class="glyphicon glyphicon-chevron-left"></span> Cancelar</a>
            </div>
        </div>
    </div>

</form>

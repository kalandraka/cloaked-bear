<form id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" action="{{ form.vars.action }}" method="POST"
      enctype="multipart/form-data">
    {% if form.vars.method == 'PUT' %}
        <input type="hidden" name="_method" value="PUT"/>
    {% endif %}
    {{ form_errors(form) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.boleta) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.fecha) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.chofer.chofer) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.chofer.codigobarras) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.chofer.pin) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.vehiculo) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.combustible) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.cantidadLibros) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.marchamo1) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.marchamo2) }}
        </div>
    </div>

    <br/>

    {# buttons group #}
    <div class="row">
        <div class="col-md-4">
            <input class="btn btn-primary" style="height: 34px" type="submit" value="Aceptar">

            <div class="btn-group">
                <a class="btn btn-primary" href="{{ path('servicioCombustible') }}"> Cancelar</a>
            </div>
        </div>
    </div>

</form>

{% extends "BusetaCombustibleBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Ver Datos de Servicio de Combustible' %}
{% block header_right %}
    {% from '@BusetaTemplate/Macros/macros.html.twig' import documentState %}

    <h4 class="pull-right">
        {{ documentState(entity.estado, 'BusetaCombustibleBundle') }}
    </h4>
{% endblock %}

{% block area_trabajo %}
    <table class="table table-striped" style="font-size: 16px;">
        <tbody>
        <tr>
            <th>Combustible</th>
            <td>{{ entity.combustible }}</td>
        </tr>
        <tr>
            <th>Chofer</th>
            <td>{{ entity.chofer }}</td>
        </tr>
        <tr>
            <th>Veh√≠culo</th>
            <td>{{ entity.vehiculo }}</td>
        </tr>
        <tr>
            <th>Cantidad de Libros</th>
            <td>{{ entity.cantidadLibros }}</td>
        </tr>
        <tr>
            <th>Fecha</th>
            <td>{{ entity.fecha | date('d/m/Y h:i a') }}</td>
        </tr>
        <tr>
            <th>Marchamo 1</th>
            <td>{{ entity.marchamo1 }}</td>
        </tr>
        <tr>
            <th>Marchamo 2</th>
            <td>{{ entity.marchamo2 }}</td>
        </tr>
        </tbody>
    </table>

    <div class="form-actions">
        <a class="btn btn-default" href="{{ path('servicioCombustible') }}">
            <i class="fa fa-chevron-left"></i> {{ 'actions.list' | trans }}</a>
        {% if entity.estado == 'PR' %}
        <a class="btn btn-primary" href="{{ path('combustible_serviciocombustible_serviciar', { 'id': entity.id }) }}">
            <i class="fa fa-dashboard"></i> Serviciar
        </a>
        {% endif %}
    </div>
{% endblock %}

{% block contenido %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

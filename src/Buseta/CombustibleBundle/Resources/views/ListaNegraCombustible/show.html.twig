{% extends "BusetaCombustibleBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Ver Datos de Lista Negra Combustible' %}

{% block area_trabajo %}
    <table class="table table-striped" style="font-size: 16px;">
        <tbody>

        <tr>
            <th>Autob√∫s</th>
            <td>{{ entity.autobus }}</td>
        </tr>

        <tr>
            <th>Fecha de Inicio</th>
            <td>{{ entity.fechaInicio | date('d/m/Y h:i')  }}</td>
        </tr>

        <tr>
            <th>Fecha Final</th>
            <td>{{ entity.fechaFinal | date('d/m/Y h:i')  }}</td>
        </tr>

        </tbody>
    </table>

        <div class="form-actions">
        <a class="btn btn-primary" href="{{ path('listaNegraCombustible_edit', { 'id': entity.id }) }}">
            <i class="fa fa-edit"></i> Editar</a>
        <a class="btn btn-default" href="{{ path('listaNegraCombustible') }}">
            <span class="glyphicon glyphicon-chevron-left"></span> Listado</a>
        <a href="#delete" data-href="{{ path('listaNegraCombustible_delete', {'id': entity.id}) }}" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> {{ 'actions.delete' | trans({}, 'BusetaCombustibleBundle') }}</a>
    </div>

    {% include 'BusetaCombustibleBundle:ListaNegraCombustible:delete_modal.html.twig' with { 'form' : delete_form, 'entity' : entity } %}

{% endblock %}

{% block contenido %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        var deleteevent = new DeleteEvent('{{ path('listaNegraCombustible') }}', 'div#listanegra_records_list', false);
        deleteevent.start_events();
    </script>
{% endblock %}

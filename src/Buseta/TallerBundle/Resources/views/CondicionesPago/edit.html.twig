{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Modificar Condición de Pago' %}

{% block area_trabajo %}

    {{ form_start(edit_form) }}
    <div class="row show-grid">
        <div class="col-md-4">
            <label>Nombre:</label>
            {{ form_widget(edit_form.nombre) }}
        </div>

        <div class="col-md-4">
            <label>Días de Plazo:</label>
            {{ form_widget(edit_form.dias_plazo) }}
        </div>

        <div class="col-md-4">
            <label>Meses de Plazo:</label>
            {{ form_widget(edit_form.meses_plazo) }}
        </div>
    </div>

    <div class="row show-grid">
        <div class="col-md-12">
            <label>Descripción:</label>
            {{ form_widget(edit_form.descripcion) }}
        </div>
    </div>

    <div class="row show-grid">
        <div class="col-md-12">
            <label>Nota:</label>
            {{ form_widget(edit_form.nota) }}
        </div>
    </div>


    <div class="row show-grid">
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-save"></span> Aceptar</button>
            <div class="btn-group">
                <a class="btn btn-default" href="{{ path('condicionespago') }}">
                    <span class="glyphicon glyphicon-chevron-left"></span> Cancelar</a>
            </div>
        </div>
    </div>

    {{ form_end(edit_form) }}


{% endblock %}


{% block contenido %}

{% endblock %}

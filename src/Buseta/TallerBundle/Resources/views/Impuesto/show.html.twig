{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Ver Datos del Impuesto' %}

{% block area_trabajo %}

    <table class="table table-striped" style="font-size: 16px;">
        <tbody>

        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>

        <tr>
            <th>NÃºmero</th>
            <td>{{ entity.numero }}</td>
        </tr>

        <tr>
            <th>Tipo</th>
            <td>{{ entity.tipo }}</td>
        </tr>

        <tr>
            <th>Tarifa</th>
            <td>{{ entity.tarifa }}</td>
        </tr>

        </tbody>
    </table>

    <div class="form-actions">
        <a class="btn btn-primary" href="{{ path('impuesto_edit', { 'id': entity.id }) }}">
            <i class="fa fa-edit"></i> Editar</a>
        <a class="btn btn-default" href="{{ path('impuesto') }}">
            <span class="glyphicon glyphicon-chevron-left"></span> Listado</a>
        <a href="#delete" data-href="{{ path('impuesto_delete', {'id': entity.id}) }}" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> {{ 'actions.delete' | trans({}, 'BusetaBodegaBundle') }}</a>
    </div>

    {% include 'BusetaTallerBundle:Impuesto:delete_modal.html.twig' with { 'form' : delete_form, 'entity' : entity } %}

{% endblock %}


{% block contenido %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        var impuestodeleteevent = new DeleteEvent('{{ path('impuesto') }}', 'div#impuesto_records_list', false);
        impuestodeleteevent.start_events();
    </script>
{% endblock %}
{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Crar Nuevo Impuesto' %}

{% block area_trabajo %}

    <form action="{{ path('impuesto_create') }}" method="post" enctype="multipart/form-data">

        {{ form_errors(form) }}

        <div class="row show-grid">
            <div class="col-md-4">
                {{ form_row(form.nombre) }}
            </div>

            <div class="col-md-4">
                {{ form_row(form.numero) }}
            </div>

            <div class="col-md-4">
                {{ form_row(form.tipo) }}
            </div>
        </div>

        <div class="row show-grid">
            <div class="col-md-4">
                {{ form_row(form.tarifa) }}
            </div>
        </div>

        <div class="row show-grid">
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-save"></span> Aceptar</button>
                <div class="btn-group">
                    <a class="btn btn-default" href="{{ path('impuesto') }}">
                        <span class="glyphicon glyphicon-chevron-left"></span> Cancelar</a>
                </div>
            </div>
        </div>

        {{ form_rest(form) }}
    </form>

{% endblock %}

{% block contenido %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendors/bootstrap/js/bootstrap-modal.js') }}"></script>
{% endblock javascripts %}

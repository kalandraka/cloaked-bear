                console.log($(this).attr('href'));

                var url = Routing.generate('ordennecesidadproducto_new', {'ordentrabajo': ordenTrabajo.id});
                if($(this).attr('href') !== undefined && $(this).attr('href') === '#btn_onecprod_edit') {
                    url = Routing.generate('ordennecesidadproducto_edit', {'id': $(this).data('content')});

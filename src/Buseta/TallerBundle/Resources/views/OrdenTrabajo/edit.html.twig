                        }).fail(utils._fail).always(function(){});
            },

            _load_delete_modal: function(e) {
                if (e !== undefined) {
                    e.preventDefault();
                }

                var url = Routing.generate('ordentrabajo_ordennecesidadproducto_delete', {'id': $(this).data('content')});

                $.get(url).done(function(response, textStatus, jqXHR){
                    $('div#form_onecprod_delete_modal').replaceWith($(response.view));

                    $('div#form_onecprod_delete_modal a#btn_onecprod_delete').on('click', onecprod._save_delete_modal);
                    $('div#form_onecprod_delete_modal a#btn_onecprod_cancel').on('click', function(){
                        $('div#form_onecprod_delete_modal').modal('hide');
                    });

                    $('div#form_onecprod_delete_modal').modal('show');
                }).fail(utils._fail).always(function(){});
            },

            _save_modal: function (e) {
                if(e !== undefined) {
                    e.preventDefault();
                }

                $('#btn_onecprod_save').find('span')
                        .removeClass('glyphicon')
                        .removeClass('glyphicon-save')
                        .addClass('fa')
                        .addClass('fa-gear')
                        .addClass('fa-spin');

                $('form#' + onecprod.form_id).ajaxSubmit({
                    success: onecprod._done,
                    error: utils._fail,
                    complete: onecprod._always,
                    dataType: 'json'
                });
            },

            _save_delete_modal: function (event) {

                if(event != undefined) {
                    event.preventDefault();
                }

                $('#btn_onecprod_delete').find('span')
                        .removeClass('glyphicon')
                        .removeClass('glyphicon-save')
                        .addClass('fa')
                        .addClass('fa-gear')
                        .addClass('fa-spin');

                var deleteForm = $('div#form_onecprod_delete_modal').find('form'),
                        url = $(deleteForm).attr('action');

                deleteForm.ajaxSubmit({
                    success: function (response, textStatus, jqXHR) {
                        if(jqXHR.status == 202) {
                            addGlobalMessage('success', response.message);
                        }
                        $('div#form_onecprod_delete_modal').modal('hide');
                        onecprod._load();
                    },
                    error: utils._fail,
                    complete: onecprod._always,
                    url: url,
                    dataType: 'json'
                });
            },

            _done: function (response, textStatus, jqXHR) {
                if(jqXHR.status == 201 || jqXHR.status == 202) {
                    addGlobalMessage('success', response.message);

                    $('div#form_onecprod_modal').modal('hide');
                    onecprod._load();
                } else {
                    $('form#' + onecprod.form_id).replaceWith($(response.view).find('form'));
                    onecprod._modal_start_events();
                }
            },

            _always: function () {
                tabs._remove_loadding(onecprod.tabname)
            }
        }
    </script>


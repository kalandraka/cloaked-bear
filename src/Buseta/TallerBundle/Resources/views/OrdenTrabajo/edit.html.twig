        }
    </script>

    <script type="text/javascript">
        var tareaAdicional = {
            _new: function (event, mpreventivo) {
                event.preventDefault();

                $.ajax({
                    type: 'GET',
                    url: '{{ path('tareaadicional_new_modal') }}',
                    data: {
                        mpreventivo_id: mpreventivo

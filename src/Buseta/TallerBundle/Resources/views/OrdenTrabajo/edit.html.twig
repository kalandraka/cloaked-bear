                };

                $.ajax({
                    type: 'GET',
                    url: '{{ path('ajax_select_autobus_kilometraje') }}',
                    data: $data,
                    success: function (data) {
                        var values = $.parseJSON(data);

                        if (!values.empty) {
                            $('#{{ edit_form.kilometraje.vars.id }}').val(values.kilometraje);
                        } else {
                            $('#{{ edit_form.kilometraje.vars.id }}').html();
                        }
                    }

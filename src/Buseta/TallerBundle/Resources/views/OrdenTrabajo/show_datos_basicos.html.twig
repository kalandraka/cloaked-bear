<form action="{{ path('ordentrabajo_create') }}" method="post" enctype="multipart/form-data">
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.numero) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.requisionMateriales) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.diagnostico) }}
        </div>
    </div>

    <br/>
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.realizadaPor) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.ayudante) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.diagnosticadoPor) }}
        </div>
    </div>

    <br/>
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.autobus) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.fechaInicio) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.fechaFinal) }}
        </div>
    </div>

    <br/>
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.prioridad) }}
        </div>
    </div>

    <br/>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.observaciones) }}
        </div>
    </div>

    <br/>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.tareasAdicionales) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="btn-group" style="padding-bottom: 8px;">
                <a id="adicionarNuevaTarea" class="btn btn-primary" href="#"><i class="fa fa-plus-circle"></i> Adicionar tarea adicional</a>
            </div>
        </div>
    </div>

    <br/>
    <fieldset>
        <legend>Resumen de Orden de Trabajo</legend>
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.duracionDias) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.duracionHorasLaboradas) }}
            </div>
        </div>

        <br/>
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.aprobadoPor) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.revisadoPor) }}
            </div>
        </div>
    </fieldset>

    <br/>
    <div class="row">
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-save"></span> Aceptar</button>
            <div class="btn-group">
                <a class="btn btn-default" href="{{ path('ordentrabajo') }}">
                    <span class="glyphicon glyphicon-chevron-left"></span> Cancelar</a>
            </div>
        </div>
    </div>

    {{ form_rest(form) }}
</form>

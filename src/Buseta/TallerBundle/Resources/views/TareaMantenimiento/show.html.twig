{% extends "BusetaTallerBundle::layout.html.twig" %}

{% trans_default_domain 'BusetaTallerBundle' %}

{% block title block('header') %}

{% block header 'Ver Datos de Tarea de Mantenimiento' %}

{% block area_trabajo %}

    <table class="table table-striped" style="font-size: 16px;">
        <tbody>
            <tr>
                <th>Valor</th>
                <td>{{ entity.valor }}</td>
            </tr>
            <tr>
                <th>Grupo</th>
                <td>{{ entity.grupo }}</td>
            </tr>
            <tr>
                <th>Subgrupo</th>
                <td>{{ entity.subgrupo }}</td>
            </tr>
            <tr>
                <th>Garantía</th>
                <td>{{ entity.garantia }}</td>
            </tr>
            <tr>
                <th>Kilómetros</th>
                <td>{{ entity.kilometros }}</td>
            </tr>
            <tr>
                <th>Horas</th>
                <td>{{ entity.horas }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-actions">

        <a class="btn btn-primary" href="{{ path('tareamantenimiento_edit', { 'id': entity.id }) }}">
            <i class="fa fa-edit"></i> Editar</a>
        <a class="btn btn-default" href="{{ path('tareamantenimiento') }}">
            <span class="glyphicon glyphicon-chevron-left"></span> Listado</a>
        <a href="#delete" data-href="{{ path('tareamantenimiento_delete', {'id': entity.id}) }}" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> {{ 'actions.delete' | trans({}, 'BusetaBodegaBundle') }}</a>
    </div>

    {% include 'BusetaTallerBundle:TareaMantenimiento:delete_modal.html.twig' with { 'form' : delete_form, 'entity' : entity } %}

{% endblock %}

{% block contenido %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        var deleteevent = new DeleteEvent('{{ path('tareamantenimiento') }}', 'div#records_list', false);
        deleteevent.start_events();
    </script>
{% endblock %}

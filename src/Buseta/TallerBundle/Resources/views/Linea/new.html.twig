{% extends "BusetaTallerBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Crear Nueva Línea' %}

{% endblock %}

{% block area_trabajo %}

    <form action="{{ path('linea_create') }}" method="post" enctype="multipart/form-data">
        <div class="row show-grid">
            <div class="col-md-4">
                <label>Número:</label>
                {{ form_widget(form.numero) }}
            </div>

            <div class="col-md-4">
                <label>Tipo:</label>
                {{ form_widget(form.tipo) }}
            </div>

            <div class="col-md-4">
                <label>Condición:</label>
                {{ form_widget(form.condicion) }}
            </div>
        </div>

        <div class="row show-grid">
            <div class="col-md-4">
                <label>Grupo:</label>
                {{ form_widget(form.numero) }}
            </div>

            <div class="col-md-4">
                <label>Tipo:</label>
                {{ form_widget(form.tipo) }}
            </div>

            <div class="col-md-4">
                <label>Producto:</label>
                {{ form_widget(form.producto) }}
            </div>
        </div>

        <div class="row show-grid">
            <div class="col-md-4">
                <label>Impuesto:</label>
                {{ form_widget(form.impuesto) }}
            </div>

            <div class="col-md-4">
                <label>Cantidad de pedido:</label>
                {{ form_widget(form.cantidad_pedido) }}
            </div>

            <div class="col-md-4">
                <label>Monto:</label>
                {{ form_widget(form.monto) }}
            </div>
        </div>

        <div class="row show-grid">
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-save"></span> Aceptar</button>
                <div class="btn-group">
                    <a class="btn btn-default" href="{{ path('impuesto') }}">
                        <span class="glyphicon glyphicon-chevron-left"></span> Cancelar</a>
                </div>
            </div>
        </div>

        {{ form_rest(form) }}
    </form>

{% endblock %}


{% block contenido %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock javascripts %}

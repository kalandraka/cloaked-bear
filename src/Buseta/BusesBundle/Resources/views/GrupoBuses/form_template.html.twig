<form id="grupo_buses_form_id" name="{{ form.vars.full_name }}" action="{{ form.vars.action }}" method="POST"
      enctype="multipart/form-data">
    {% if form.vars.method == 'PUT' %}
        <input type="hidden" name="_method" value="PUT"/>
    {% endif %}
    {{ form_errors(form) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.nombre) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.color) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.colorTexto) }}
        </div>
    </div>

    <br/>

    {# buttons group #}
    <div class="row">
        <div class="col-md-4">
            <div class="btn-group">
                <a class="btn btn-primary" id="save_grupo_buses_form_submit_btn">
                    <span class="glyphicon glyphicon-save"></span> Aceptar</a>
            </div>
            <div class="btn-group">
                <a class="btn btn-default" href="{{ path('grupobuses') }}"><span
                            class="glyphicon glyphicon-chevron-left"></span> Cancelar</a>
            </div>
        </div>
    </div>

</form>

{% if form is defined %}
    {{ form(form) }}
{% endif %}

<a href="#addArchivo" class="btn btn-default" style="margin-bottom: 8px;"><span class="fa fa-plus"></span> Subir Archivo</a>

<table class="table table-condensed table-striped table-bordered table-hover">
    <thead>
    <th>Archivo</th>
    <th>Extensión</th>
    <th style="width: 1px;"></th>
    </thead>
    <tbody>
    {% for archivo in entity.archivosAdjuntos %}
        <tr>
            <td><a href="{{ asset(archivo.webPath) }}">{{ archivo.originalName | default('-') }}</a></td>
            <td>{{ archivo.extension | default('-') }}</td>
            <td><a class="btn btn-danger btn-sm delete_archivo_link" href="#delete" data-id="{{ archivo.id }}"><i
                            class="fa fa-remove"></i> Eliminar</a></td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">No existen elementos que mostrar.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div id="modal-delete-archivoadjunto" data-keyboard="false" data-backdrop="static" class="modal modal-darkorange fade"
     style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header clearfix" style="color: #d73d32;">
                <i class="glyphicon glyphicon-fire pull-left" style="font-size: 25px; margin-top: 10px;"></i>

                <div class="modal-title pull-left"><h3
                            style="margin: 10px;">{{ 'messages.danger' | trans({}, 'BusetaBodegaBundle') }}</h3></div>
            </div>

            <div class="modal-body" style="color: #737373;">
                <p>Usted está tratando de eliminar el Archivo Adjunto <strong></strong>.
                    Al aceptar la acción se eliminarán los datos de forma permanente. <strong>¿Está seguro que desea
                        continuar?</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">{{ 'actions.cancel' | trans({}, 'BusetaBodegaBundle') }}</button>
                <button type="button" class="btn btn-danger"><i
                            class="fa fa-remove"></i> {{ 'actions.confirm' | trans({}, 'BusetaBodegaBundle') }}</button>
            </div>
        </div> <!-- / .modal-content -->
    </div> <!-- / .modal-dialog -->
</div>

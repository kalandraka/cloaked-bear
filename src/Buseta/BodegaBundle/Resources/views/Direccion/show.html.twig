{% extends 'BusetaBodegaBundle::layout.html.twig' %}

{% block area_trabajo -%}
    <h1>Direcci√≥n</h1>

    <table class="table table-striped" style="font-size: 16px;">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Calle</th>
                <td>{{ entity.calle }}</td>
            </tr>
            <tr>
                <th>Codigopostal</th>
                <td>{{ entity.codigoPostal }}</td>
            </tr>
            <tr>
                <th>Localidad</th>
                <td>{{ entity.localidad }}</td>
            </tr>
            <tr>
                <th>Pais</th>
                <td>{{ entity.pais }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ entity.region }}</td>
            </tr>
            <tr>
                <th>Latitud</th>
                <td>{{ entity.latitud }}</td>
            </tr>
            <tr>
                <th>Longitud</th>
                <td>{{ entity.longitud }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-actions">
        <form action="{{ path('direccion_delete', {'id': entity.id}) }}" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="DELETE"/>
            <a class="btn btn-default" href="{{ path('direccion') }}">
                <span class="glyphicon glyphicon-chevron-left"></span> Listado</a>
            <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Eliminar</button>
        </form>
    </div>
{% endblock %}

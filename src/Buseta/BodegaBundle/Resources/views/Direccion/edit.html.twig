<div class="modal" data-keyboard="false" data-backdrop="static" id="form_direccion_modal" tabindex="-1" role="dialog" aria-labelledby="createAddress" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="createAddress">{{ 'direccion.modal.title'|trans({},'BusetaBodegaBundle') }}</h4>
            </div>
            <div class="modal-body">
                <form name="{{ edit_form.vars.full_name }}" id="{{ edit_form.vars.id }}" action="{{ edit_form.vars.action }}"
                      method="post" enctype="multipart/form-data">
                    {% if edit_form.vars.method == 'PUT' %}
                        <input type="hidden" name="_method" value="PUT"/>
                    {% endif %}
                    {{ form_errors(edit_form) }}

                    <div class="row show-grid">
                        <div class="col-md-12">
                            {{ form_row(edit_form.nombre) }}
                        </div>

                        <div class="col-md-8">
                            {{ form_row(edit_form.calle) }}
                        </div>

                        <div class="col-md-4">
                            {{ form_row(edit_form.codigoPostal) }}
                        </div>
                    </div>

                    <div class="row show-grid">
                        <div class="col-md-4">
                            {{ form_row(edit_form.localidad) }}
                        </div>

                        <div class="col-md-4">
                            {{ form_row(edit_form.region) }}
                        </div>

                        <div class="col-md-4">
                            {{ form_row(edit_form.pais) }}
                        </div>
                    </div>

                    <div class="row show-grid">
                        <div class="col-md-4">
                            {{ form_row(edit_form.latitud) }}
                        </div>

                        <div class="col-md-4">
                            {{ form_row(edit_form.longitud) }}
                        </div>
                    </div>

                    {{ form_rest(edit_form) }}
                </form>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" id="btn_direccion_cancel" data-dismiss="modal"><span class="glyphicon glyphicon-chevron-left"></span>
                    {{ 'actions.cancel' | trans({}, 'BusetaBodegaBundle') }}</a>
                <a href="#" class="btn btn-primary" id="btn_direccion_save"><span class="glyphicon glyphicon-save"></span>
                    {{ 'actions.save' | trans({}, 'BusetaBodegaBundle') }}</a>
            </div>
        </div>
    </div>
</div>

{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Crear nueva Categor√≠as de Producto' %}

{% block area_trabajo %}

    <form id="cat_prod_form" action="{{ path('categoria_producto_create') }}" method="post" enctype="multipart/form-data">
        <div class="row show-grid">
            <div class="col-md-4">
                {{ form_row(form.valor) }}
            </div>

            <div class="col-md-8">
                {{ form_row(form.descripcion) }}
            </div>
        </div>


        <div class="row show-grid">
            <div class="col-md-4">
                <div class="btn-group">
                    <a class="btn btn-primary" id="save_cat_prod_form_submit_btn">
                        <span class="glyphicon glyphicon-save"></span> Aceptar</a>
                </div>
                <div class="btn-group">
                    <a class="btn btn-default" href="{{ path('categoria_producto') }}">
                        <span class="glyphicon glyphicon-chevron-left"></span> Cancelar</a>
                </div>
            </div>
        </div>

        {{ form_rest(form) }}
    </form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('a#save_cat_prod_form_submit_btn').click(function () {
            $('form#cat_prod_form').submit();
        });
    </script>
{% endblock %}

{% block contenido %}

{% endblock %}

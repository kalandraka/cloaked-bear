
{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block title block('header') %}

{% block header 'Crear Nuevo Producto con Topes' %}

{% block area_trabajo %}

    <form id="producto_tope_form" action="{{ path('productotope_create') }}" method="post" enctype="multipart/form-data">

        <div class="row show-grid">
            <div class="col-md-6">
                {{ form_row(form.producto) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.almacen) }}
            </div>
        </div>

        <div class="row show-grid">

            <div class="col-md-3">
                {{ form_row(form.min) }}
            </div>

            <div class="col-md-3">
                {{ form_row(form.max) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.comentarios) }}
            </div>

        </div>

        <div class="row show-grid">
            <div class="col-md-4">
                <div class="btn-group">
                    <a class="btn btn-primary" id="save_producto_tope_form_submit_btn">
                        <span class="glyphicon glyphicon-save"></span> Aceptar</a>
                </div>
                <div class="btn-group">
                    <a class="btn btn-default" href="{{ path('productotope') }}">
                        <span class="glyphicon glyphicon-chevron-left"></span> Cancelar</a>
                </div>
            </div>
        </div>

        {{ form_rest(form) }}
    </form>

{% endblock %}


{% block contenido %}

{% endblock %}


{% block javascripts %}
<script type="text/javascript">
    $(document).ready(function () {
        $('#buseta_bodegabundle_productotope_producto').chosen();
        $('#buseta_bodegabundle_productotope_almacen').chosen();
    });
    $('a#save_producto_tope_form_submit_btn').click(function () {
        $('form#producto_tope_form').submit();
    });
</script>
{% endblock javascripts %}

<form id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" action="{{ form.vars.action }}" method="POST" enctype="multipart/form-data">
    {% if form.vars.method == 'PUT' %}
        <input type="hidden" name="_method" value="PUT"/>
    {% endif %}
    {{ form_errors(form) }}
    {{ form_row(form.id) }}
    {{ form_row(form._token) }}

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.nombre) }}
        </div>

        <div class="col-md-6">
            {{ form_row(form.almacen) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.descripcion) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.fecha) }}
        </div>
    </div>

    {# buttons group #}
    <div class="row">
        <div class="col-md-4">
            <a class="btn btn-primary" id="btn_inventariofisico_save" href="#"><span class="glyphicon glyphicon-save"></span>
                {{ 'actions.save' | trans({}, 'BusetaBodegaBundle') }}</a>
            <a class="btn btn-default" id="btn_inventariofisico_cancel" href="{{ path('inventariofisico') }}"><span class="glyphicon glyphicon-chevron-left"></span>
                {{ 'actions.cancel' | trans({}, 'BusetaBodegaBundle') }}</a>
        </div>
    </div>
</form>
